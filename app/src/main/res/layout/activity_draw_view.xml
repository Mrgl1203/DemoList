<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_draw_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gl152.testdemo.activity.DrawViewActivity">

    <com.example.gl152.testdemo.view.TestView1
        android:layout_width="300dp"
        android:layout_height="300dp" />

    <com.example.gl152.testdemo.view.TestView2
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:image="@mipmap/icon_sharing_twitter"
        app:imagewidth="20dp"
        app:imageheight="20dp"
        app:radius="20"
        app:text="12"
        app:textsize="10sp" />


    <com.example.gl152.testdemo.view.TestView4
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
